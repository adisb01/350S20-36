<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1FADE"
    android:orientation="vertical">

    <TextView
        android:id="@+id/found_item_around3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#8BF44336"
        android:text="You found:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#0A0202"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lostItemCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8BF44336"
        android:gravity="center"
        android:text="[Lost Item Category]"
        android:textColor="#0A0202"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lostItemTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BF44336"
        android:text="[Lost Date]"
        android:textAlignment="center"
        android:textColor="#0A0202" />

    <TextView
        android:id="@+id/lostItemAround"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#8BF44336"
        android:text="[Lost Around]"
        android:textAlignment="center"
        android:textColor="#0A0202" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="          I..."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/currentlyHaveIt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently have it"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <RadioButton
            android:id="@+id/leftItAtALocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Left it at a location"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/lostItemText1"
            android:layout_width="393dp"
            android:layout_height="match_parent"
            android:background="@drawable/back"
            android:gravity="top"
            android:hint="Where should they come get it?"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#808080" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/lostItemText2"
            android:layout_width="393dp"
            android:layout_height="match_parent"
            android:background="@drawable/back"
            android:gravity="top"
            android:hint="Anything else?"
            android:textColorHint="#808080"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/sendMessage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="#853F6EB5"
        android:onClick="onSendMessageClick"
        android:text="Send Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="75dp" />
</LinearLayout>
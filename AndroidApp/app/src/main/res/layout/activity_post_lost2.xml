<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/lost_item_category2"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/libre_franklin_thin"
        android:text="You lost an item"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <TextView
        android:id="@+id/lost_description_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_franklin_thin"
        android:text="  Description:"
        android:textAlignment="center"
        android:textColor="#130202"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/lost_description"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginHorizontal="40dp"
        android:ems="10"
        android:hint="Color, size, recognizable features, etc."
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <TextView
        android:id="@+id/lost_addinfo_q"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:fontFamily="@font/libre_franklin_thin"
        android:text="  Additional Info:"
        android:textAlignment="center"
        android:textColor="#130202"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/lost_addinfo"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginHorizontal="50dp"
        android:ems="10"
        android:hint="Anything else?"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="109dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#016C61"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/libre_franklin_medium"
            android:onClick="onMakeLostClick"
            android:text="Create Post"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>